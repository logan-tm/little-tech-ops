    "doc": "docs"
  },
  "scripts": {
    "dev:client": "cd apps/frontend && npm run dev",
    "dev:server": "cd apps/backend && npm run dev",
    "dev": "concurrently --kill-others 'npm run dev:server' 'npm run dev:client'",
    "install:client": "cd apps/frontend && npm install --include=dev",
    "install:server": "cd apps/backend && npm install --include=dev",
    "install:all": "npm run install:client && npm run install:server"
  },
